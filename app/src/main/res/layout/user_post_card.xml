<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="1dp">
    <RelativeLayout
        android:id="@+id/blog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <LinearLayout
            android:id="@+id/upper_linear"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inner_relative">
                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:maxLength="80"
                    android:maxLines="2"
                    android:text="Making Sense of Complexity"
                    android:textColor="#000000"
                    android:textSize="22dp" />
                <TextView
                    android:layout_below="@+id/title1"
                    android:id="@+id/body1"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bitcoin is an illusion,a mass hallucination
so one hears.Its just numbers in cybers"
                    android:textSize="18dp"
                    android:textColor="#F2030303"
                    android:maxLines="2"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_toRightOf="@+id/upper_linear"
            android:layout_toEndOf="@+id/upper_linear">

            <ImageView
                android:id="@+id/image_set1"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:paddingRight="10dp"
                android:src="@mipmap/ic_camera_enhance_black_24dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/upper_linear"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="30dp"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/author_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:inputType="textCapSentences"
                android:padding="10dp"
                android:text="What girls need is Jesse"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>